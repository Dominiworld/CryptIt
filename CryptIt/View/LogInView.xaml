        </StackPanel>

        <TextBlock FontFamily="Helvetica" FontStyle="Italic" Foreground="#b0e5b1" Text="CryptIt" FontSize="18" Margin="376,33,134,402" RenderTransformOrigin="0.429,0.976"/>
        <TextBlock FontFamily="Helvetica" Foreground="#c5d0fe" Text="IdeaFix ©2016" FontSize="15" Margin="238,443,224,0" RenderTransformOrigin="0.429,0.976"/>


        <Button Content="ВОЙТИ" Height="Auto" Command="{Binding AuthorizeCommand}" Margin="201,203,200,213" Width="Auto"/>

    </Grid>
</Window>
