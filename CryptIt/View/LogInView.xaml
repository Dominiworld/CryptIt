        <Border Background="#286290" Height="30" Margin="0,439,0,3"/>
        <Border Background="#215680" Height="30" Margin="0,442,0,0"/>

        <StackPanel  VerticalAlignment="Stretch" Margin="193,16,192,370" Height="86" >
