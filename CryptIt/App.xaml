<Application x:Class="CryptIt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/LogInView.xaml">
    <Application.Resources>



        <!--<Style TargetType="Button">
                <Setter Property="Width" Value="210" />
                <Setter Property="Height" Value="45" />
            </Style>-->

        <LinearGradientBrush x:Key="GrayBlueGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#266493" Offset="0" />
            <GradientStop Color="#2e7db6" Offset="0.2" />
            <GradientStop Color="#3692d5" Offset="1" />
        </LinearGradientBrush>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource GrayBlueGradientBrush}" />
            <Setter Property="Width" Value="210" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="BorderThickness" Value="0px"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        </Style>


    </Application.Resources>
</Application>
